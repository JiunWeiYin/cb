<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} ----- %p %m%n"/>
        </Console>
        <RollingFile name="rolling" fileName="logs/etl-client.log"
                     filePattern="logs/$${date:yyyy-MM}/etl-client-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ----- %p %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="50"/>
        </RollingFile>
        <!--<Kafka name="kafka" topic="elt-client_log">-->
        <!--<PatternLayout pattern="%date %message"/>-->
        <!--<Property name="bootstrap.servers">10.120.137.204:9092,10.120.137.205:9092,10.120.137.206:9092</Property>-->
        <!--</Kafka>-->
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="rolling"/>
            <!--<AppenderRef ref="kafka"/>-->
        </Root>

        <!-- Note:Make sure to not let org.apache.kafka log to a Kafka appender on DEBUG level, since that will cause recursive logging -->
        <!-- https://logging.apache.org/log4j/log4j-2.4/manual/appenders.html -->
        <!--<Logger name="org.apache.kafka" level="INFO" />-->

    </Loggers>
</Configuration>